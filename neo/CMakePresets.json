{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 19,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "windows-base",
      "hidden": true,
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "windows-x64-base",
      "hidden": true,
      "binaryDir": "${sourceParentDir}/buildx64",
      "inherits": "windows-base",
      "architecture": {
        "value": "x64",
        "strategy": "set"
      },
      "cacheVariables": {
        "VCPKG_TARGET_TRIPLET": "x64-windows"
      }
    },
    {
      "name": "windows-x86-base",
      "hidden": true,
      "binaryDir": "${sourceParentDir}/buildx86",
      "inherits": "windows-base",
      "architecture": {
        "value": "Win32",
        "strategy": "set"
      },
      "cacheVariables": {
        "VCPKG_TARGET_TRIPLET": "x86-windows"
      }
    },
    {
      "name": "windows-x64-2022",
      "displayName": "VS2022: 64-bit Windows",
      "inherits": "windows-x64-base",
      "generator": "Visual Studio 17"
    },
    {
      "name": "windows-x86-2022",
      "displayName": "VS2022: 32-bit Windows",
      "inherits": "windows-x86-base",
      "generator": "Visual Studio 17"
    },
    {
      "name": "linux-base",
      "hidden": true,
      "generator": "Unix Makefiles",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },
    {
      "name": "linux-debug",
      "displayName": "Linux Debug",
      "binaryDir": "${sourceParentDir}/buildDebug",
      "inherits": "linux-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "linux-release",
      "displayName": "Linux Release",
      "binaryDir": "${sourceParentDir}/buildRelease",
      "inherits": "linux-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    }
  ]
}