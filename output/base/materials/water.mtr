// Lava
textures/liquids/lava_rocky
{
	discrete
	noSelfShadow
	nonSolid
	twosided
	//translucent
	noshadows
	forceoverlays
	sort decal
	water
	
	//deform turbulent sinTable 0.0175 (time*0.15) 10
	qer_editorimage textures/liquids/lava_rock_d
	
	diffusemap textures/liquids/lava_rock_d

	{
		blend				add
		map					textures/liquids/lava_rock_e
		shear				time*.0,time*-.02
		rgb					0.6
	}

	bumpmap textures/liquids/lava_rock_local
}

